- if @book.errors.any?
  .alert.alert-danger
    %h5 Common errors
    %ul
      - @book.errors.full_messages.each do |message|
        %li= message
= form_for @book, html: {multipart: true} do |f|
  %p= f.label :title
  %p= f.text_field :title
  %p= f.label :author
  %p= f.text_field :author
  %p= f.label :description
  %p= f.text_area :description
  %p= f.label :Genre_comma_separated
  %p= f.text_field :all_tags
  %p= f.label :envelope
  %p= f.file_field :envelope
  %p= f.label :file
  %p= f.file_field :file
  %p
    = f.submit "Save"
  %p
