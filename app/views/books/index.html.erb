<% @books.each do |book|%>
  <% unless book.is_draft %>
  <br>
  <h1><%= link_to book.title, book_path(book) %></h1>
  <p><%= envelope_for(book, size: 80)%> <%= book.description %></p>
  <p><%= raw book.tags.map(&:name).map{ |t| link_to t, tag_path(t), class: "badge badge-primary"}.join(' ') %></p>
  <hr>
  <% end %>
<% end %>
